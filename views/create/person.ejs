<html ng-app="EvPast">
	<head>
       <!-- Latest compiled and minified CSS -->
       <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
       <title>Create Person</title>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.js"></script>
	</head>
	<body ng-controller="MainController as vm">
        <h4 class="col-md-4 col-md-offset-4">Create Person</h4>
        
        <form method="POST" action="/persons" class="col-md-4 col-md-offset-4">
            <div class="form-group">
                <label for="firstNameInput">First Name</label>
                <input type="text" class="form-control" id="firstNameInput" placeholder="" name="firstName">
            </div>
            <div class="form-group">
                <label for="middleNamesInput">Middle Names</label>
                <input type="text" class="form-control" id="middleNamesInput" placeholder="" name="middleNames">
            </div>
            <div class="form-group">
                <label for="surnamesInput">Surnames</label>
                <input type="text" class="form-control" id="surnamesInput" placeholder="" name="surnames">
            </div>
            <div class="form-group">
                <label for="maidenNameInput">Maiden Names</label>
                <input type="text" class="form-control" id="maidenNameInput" placeholder="" name="maidenName">
            </div>
            <div class="form-group">
                <label for="birthDateInput">Birth Date</label>
                <input type="date" class="form-control" id="birthDateInput" placeholder="" name="birth.date">
            </div>
            </div>
            <div class="form-group">
                <label for="birthInstitutionInput">Birth Institution</label>
                <input type="text" class="form-control" id="birthInstitutionInput" placeholder="" name="birth.institution">
            </div>
            <div class="form-group">
                <label for="deathDateInput">Death Date</label>
                <input type="date" class="form-control" id="deathDateInput" placeholder="" name="death.date">
            </div>
            </div>
            <div class="form-group">
                <label for="deathInstitutionInput">Death Institution</label>
                <input type="text" class="form-control" id="deathInstitutionInput" placeholder="" name="death.institution">
            </div>
            <div class="form-group">
                <label for="employmentDateFromInput">Employment Date From</label>
                <input type="date" class="form-control" id="employmentDateFromInput" placeholder="" name="employment.dates.dateFrom">
            </div>
            <div class="form-group">
                <label for="employmentDateToInput">Employment Date To</label>
                <input type="date" class="form-control" id="employmentDateToInput" placeholder="" name="employment.dates.dateTo">
            </div>
            <div class="form-group">
                <label for="employmentInstitutionInput">Employment Institution</label>
                <input type="text" class="form-control" id="employmentInstitutionInput" placeholder="" name="employment.institution">
            </div>
            </div>
            <div class="form-group">
                <label for="employmentPositionInput">Employment Position</label>
                <input type="text" class="form-control" id="employmentPositionInput" placeholder="" name="employment.position">
            </div>
            <div class="form-group">
                <label for="educationDateFromInput">Education Date From</label>
                <input type="date" class="form-control" id="educationDateFromInput" placeholder="" name="education.dates.dateFrom">
            </div>
            <div class="form-group">
                <label for="educationDateToInput">Education Date To</label>
                <input type="date" class="form-control" id="educationDateToInput" placeholder="" name="education.dates.dateTo">
            </div>
            <div class="form-group">
                <label for="educationInstitutionInput">Education Institution</label>
                <input type="text" class="form-control" id="educationInstitutionInput" placeholder="" name="education.institution">
            </div>
            </div>
            <div class="form-group">
                <label for="educationPositionInput">Education Qualifications</label>
                <input type="text" class="form-control" id="educationPositionInput" placeholder="" name="education.qualifications">
            </div>
            <div class="form-group">
                <label for="addressDateFromInput">Address Date From</label>
                <input type="date" class="form-control" id="addressDateFromInput" placeholder="" name="address.dates.dateFrom">
            </div>
            <div class="form-group">
                <label for="addressDateToInput">Address Date To</label>
                <input type="date" class="form-control" id="addressDateToInput" placeholder="" name="address.dates.dateTo">
            </div>
             <div class="form-group">
                <label for="addressLatitudeInput">Address Latitude</label>
                <input type="number" class="form-control" id="addressLatitudeInput" placeholder="" name="address.coordinates.latitude">
            </div>
            <div class="form-group">
                <label for="addressLongitudeInput">Address Longitude</label>
                <input type="number" class="form-control" id="addressLongitudeInput" placeholder="" name="address.coordinates.longitude">
            </div>
            <div class="form-group">
                <label for="addressAddressNumberInput">Address Number</label>
                <input type="text" class="form-control" id="addressAddressNumberInput" placeholder="" name="address.coordinates.addressNumber">
            </div>
            <div class="form-group">
                <label for="addressAddressStreetNameInput">Address Street Name</label>
                <input type="text" class="form-control" id="addressAddressStreetNameInput" placeholder="" name="address.coordinates.addressStreetName">
            </div>
            <div class="form-group">
                <label for="addressAddressCityInput">Address City</label>
                <input type="text" class="form-control" id="addressAddressCityInput" placeholder="" name="address.coordinates.addressCity">
            </div>
            <div class="form-group">
                <label for="addressAddressCountyInput">Address County</label>
                <input type="date" class="form-control" id="addressAddressCountyInput" placeholder="" name="address.coordinates.addressCounty">
            </div>
            <div class="form-group">
                <label for="addressAddressPostcodeInput">Address Postcode</label>
                <input type="text" class="form-control" id="addressAddressPostcodeInput" placeholder="" name="address.coordinates.addressPostcode">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    
	</body>
    <script src="/assets/js/app.js"></script>
</html>